@{
    ViewBag.Title = "Tickets";
}

<h2>Tickets List</h2>

<div class="row-fluid">
    @using (Html.BeginForm("Search", "Ticket", FormMethod.Post))
    {
            <div>
               <div> Search by category </div>
                @(Html.Kendo()
                      .DropDownList()
                      .Name("categorysearch")
                      .DataTextField("Name")
                      .DataValueField("Name")
                      .OptionLabel("Select category")
                      .DataSource(data =>
                      {
                          data.Read(read => read.Action("AllCategories", "Ticket"));
                          data.ServerFiltering(true);
                      }))
                    
                

            </div>
            <div id="search">
                <input type="submit" value="Search" class="btn" />
            </div>
    }

</div>
<br />
<div>
    <div class="row-fluid">
        <div class="span2">
            <strong>Title </strong>
        </div>
        <div class="span2">
            <strong>NameOfCategory </strong>
        </div>
        <div class="span2">
            <strong>NameOfAuthor </strong>
        </div>
        <div class="span2">
            <strong>Priority</strong>
        </div>
        <div class="span2">
            <strong>Action</strong>
        </div>
    </div>
</div>
@(Html.Kendo()
      .ListView<MvcExamApplication.ViewModels.Ticket.TicketListViewModel>()
      .Name("list")
      .TagName("div")
      .ClientTemplateId("template")
      .DataSource(data =>
      {
          data.ServerOperation(true);
          data.Read(read =>
          {
              read.Action("All", "Ticket");
          });
          data.PageSize(5);
      })
      .Pageable())

<script type="text/x-kendo-tmpl" id="template">
    <div class="row-fluid top">
        <div class="span2">
            <strong>#:Title #</strong>
        </div>
        <div class="span2">
            <strong>#:NameOfCategory #</strong>
        </div>
        <div class="span2">
            <strong>#:NameOfAuthor #</strong>
        </div>
        <div class="span2">
            <strong>#:PriorityAsString #</strong>
        </div>
        <div class="span2">
            <a class="btn list-url" href="/Home/Details/#:Id#">More Details...</a>
        </div>
    </div>
</script>

